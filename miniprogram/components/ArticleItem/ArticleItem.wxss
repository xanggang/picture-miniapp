@import '../../style/common.wxss';
@import '../../style/icon.wxss';
.item-bar {
  width:750rpx;
  background:#FBFFFE;
  box-shadow:0px 2rpx 4rpx 0px rgba(39,135,117,0.2);
  padding: 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx
}

.item-bar .user-bar {
  width: 100%;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start
}

.user-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  overflow: hidden;
}

.user-name-bar {
  height: 70rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-grow: 1
}

.user-name-bar .user-name {
  font-size:24rpx;
  color:#252626;
}

.item-info {
  font-size:20rpx;
  color:#8A908F;
}

.user-bar .watch {
  margin-left: 30rpx;
  width: 133rpx;
}

image {
  width: 100%;
  height: 100%
}

.item-bar .item-message {
  font-size: 28rpx;
  color:#252626;
  margin-top: 20rpx;
}

.item-bar .item-image-bar {
  width: 100%;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.item-bar .item-image-bar .img-bar {
  width: 233rpx;
  height: 233rpx;
}

.item-bar .item-bottom {
  display: flex;
  height: 60rpx;
  margin-top: 10rpx;
}

.item-bar .item-bottom view {
  width: 25%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #8A908F;
}
.item-bar .item-bottom .iconfont {
  margin-right: 10rpx;
}

.active {
  color: #00B896
}

.user-bar .watch {
  margin-left: 30rpx;
  width: 133rpx;
}