.content {
  background-color:FBFFFE;
  width: 100%;
  min-height: 100vh;
}

.user-bar {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 20rpx 20rpx;
  box-sizing: border-box
}

.user-bar .user-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  overflow: hidden;
}

.user-name-bar {
  height: 70rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-grow: 1;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
}

.user-name-bar .user-name {
  font-size:24rpx;
  color:#252626;
}

.user-bar .watch {
  margin-left: 30rpx;
  width: 133rpx;
}
.item-info {
  font-size:20rpx;
  color:#8A908F;
}
.content .item-message {
  font-size: 28rpx;
  color:#252626;
  margin-top: 20rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.img-bar {
  padding: 0 20rpx;
  box-sizing: border-box;
}
image {
  width: 100%;
  height: 100%
}

.share-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 90rpx;
  margin-top: 30rpx;
}

.share-bar > view {
  width: 250rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #00B896;
  border: 1px solid #00B896;
  border-radius: 20rpx;
}

.share-bar > view:last-child {
  margin-left: 30rpx;
}

.share-bar .iconfont {
  margin-right: 10rpx;
}

.comment-total-bar {
  margin-top: 30rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center
}

.comment-total-bar .line {
  width: 10rpx;
  height: 30rpx;
  background-color: #00B896;
  display: block
}

.comment-total-bar text {
  margin-right: 30rpx;
  color: #8A908F;
}

.comment-list-bar {
  margin-top: 30rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.comment-item {
  display: flex;
}

.comment-item .left-user {
  flex-shrink: 0;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  overflow: hidden;
}

.comment-item .right-bar {
  padding-left: 20rpx;
  width: 100%;
}

.comment-item .right-bar .user-name {
  font-size: 24rpx;
  color: #8A908F;
}

.comment-item .right-bar .comment-content {
  margin-top: 20rpx;
  width: 100%;
  background-color: #F0F4F3;
  display: block;
  padding: 10rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.comment-bottn {
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #8A908F;
  margin-top: 10rpx;
}

.comment-bottn .icon-bar .iconfont {
  margin-right: 10rpx; 
}

.bottom-bar {
  width: 750rpx;
  height: 75rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  box-shadow:0px 2px 4px 0px rgba(39,135,117,0.2);
}

.bottom-bar .bottom-bar-item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 25%;
  font-size: 24rpx;
  color: #8A908F;
}

.bottom-bar .bottom-bar-item .iconfont {
  margin-right: 10rpx;
}