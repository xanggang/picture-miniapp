.content {
  background-color: #F0F4F3;
  width: 100%;
  min-height: 100vh;
}


.content .user-bar {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  background-color: #FBFFFE;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
}

.content .user-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  overflow: hidden;
}

.user-name-bar {
  height: 100%;
  box-sizing: border-box;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-grow: 1
}

.user-name-bar .user-name {
  font-size:24rpx;
  color:#252626;
}

.item-info {
  font-size:20rpx;
  color:#8A908F;
}

.user-bar .watch {
  margin-left: 30rpx;
  width: 133rpx;
}

image {
  width: 100%;
  height: 100%
}

.user-info {
  width: 100%;
  height: 80rpx;
  background-color: #FBFFFE;
  display: flex;
  padding-bottom: 10rpx;
    box-shadow:0px 2rpx 4rpx 0px rgba(39,135,117,0.2);
}

.user-info view {
  width: 33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center
}

.user-info view text:first-child {
  font-size: 28rpx;
  color: #252626;
}

.user-info view text:last-child {
  font-size: 20rpx;
  color: #8A908F;
}

.collection {
  height: 80rpx;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  background-color: #FBFFFE;
  margin-top: 30rpx;
  box-sizing: border-box;
  box-shadow:0px 2rpx 4rpx 0px rgba(39,135,117,0.2);
}

.collection text:first-child {
  color: #00B896;
  font-size: 28rpx;
}

.collection text:last-child {
  color: #252626;
  font-size: 22rpx;
  margin-left: 10rpx;
}

.article-bar {
  margin-top: 30rpx;
}